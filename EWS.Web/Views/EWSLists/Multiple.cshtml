                        </div>
                    </div>
                </div>
                                    }

                                }
    </div>
}

<script>
   

    function showMean(ID) {
        console.log(ID);
        var desc = "#mean_" + ID;
        var span = "#spanMean_" + ID;

        $(".mean").slideUp();

        $(desc).html($(span).html());

        $(desc).slideToggle();
    }

    function SetIKnow(wordID) {
        var btnEkle = "#btnMultipleBildiklerimeEkle_" + wordID;
        var btnCikar = "#btnMultipleBildiklerimdenCikar_" + wordID;

        var btnOgreneceklerimeEkle = "#btnOgrenecelerimeEkle_" + wordID;

        $(btnEkle).hide();
        $(btnCikar).show();
        $(btnOgreneceklerimeEkle).hide();
        EWS_SetIKnow(wordID);
    }

    function RemoveIKnow(wordID) {

        var btnEkle = "#btnMultipleBildiklerimeEkle_" + wordID;
        var btnCikar = "#btnMultipleBildiklerimdenCikar_" + wordID;

        var btnOgreneceklerimeEkle = "#btnOgrenecelerimeEkle_" + wordID;

        $(btnOgreneceklerimeEkle).show();

        $(btnEkle).show();
        $(btnCikar).hide();
        EWS_RemoveIKnow(wordID);
    }

    function SetIWillLearn(wordID) {
        var btnEkle = "#btnOgrenecelerimeEkle_" + wordID;
        var btnCikar = "#btnOgreneceklerimdenCikar_" + wordID;

        var btnOgreneceklerimeEkle = "#btnMultipleBildiklerimeEkle_" + wordID;

        $(btnEkle).hide();
        $(btnCikar).show();
        $(btnOgreneceklerimeEkle).hide();
        EWS_IWillLearn(wordID);
    }

    function RemoveILearn(wordID) {
        var btnEkle = "#btnOgrenecelerimeEkle_" + wordID;
        var btnCikar = "#btnOgreneceklerimdenCikar_" + wordID;

        var btnOgreneceklerimeEkle = "#btnMultipleBildiklerimeEkle_" + wordID;

        $(btnOgreneceklerimeEkle).show();

        $(btnEkle).show();
        $(btnCikar).hide();
        EWS_RemoveIWillLearn(wordID);
    }

</script>
