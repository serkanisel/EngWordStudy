@model EWS.Model.EWSList

<div class="container p-0">
    <div class="row border-bottom pb-2 border-dark">
        <div class="col-md-4 col-sm-12">
            @*@Html._EWSDropdown("EWSList", "", false, "", "", "Lookup/GetEWSLists?userID=" + Model.UserID.ToString(), "UN", "Name", modelValue: Model.UN, secinizEkle: false, style: "height:40px;font-weight:bold;")*@
            <h4>@Model.Name</h4>
        </div>
        <div class="col-md-8 col-sm-12 text-right">
            <div class="row p-0">
                <div class="col-sm-12 p-0">
                    <input type="text" class="col-2 form-control" id="currentRow" style="display:unset !important;height: 36px;top: 3px;"><span class="btn btn-dark" id="listWordCount">@Model.EWSListWord.Count()</span>
                    @if (Model.EWSReadPart == null || Model.EWSReadPart.Count() == 0)
                    {
                        <a href="@Url.Action("Index","EWSLists")" class="btn btn-dark"><i class="fa fa-backward"></i> <span class="hidden-sm-down">Listeye Dön</span></a>
                    }
                    else
                    {
                        <a href="@Url.Action("Index","ReadingPart")" class="btn btn-dark"><i class="fa fa-backward"></i> <span class="hidden-sm-down">Listeye Dön</span></a>
                    }
                    @*<a href="javascript:void(0)" class="btn btn-secondary" onclick="ListeYonetimi($('#EWSList').val())"><i class="fa fa-cogs"></i> <span class="hidden-sm-down">Yönet</span></a>*@
                </div>
            </div>
        </div>
    </div>

    <div class="row p-0 m-0 mt-2">
        <div class="col-lg-9 col-sm-12 p-0 m-0">
            <div class="pull-left">
                <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-onebyone" role="tab" aria-controls="v-pills-onebyone" aria-expanded="true"><i class="fa fa-square" aria-hidden="true"></i> One By One</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-multiple" role="tab" aria-controls="v-pills-multiple" aria-expanded="true" onclick="PreviewMultiple('@Model.UN')"><i class="fa fa-table" aria-hidden="true"></i> Multiple</a>
                    </li>
                    @*<li class="nav-item">
                            <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-table" role="tab" aria-controls="v-pills-table" aria-expanded="true" onclick="PreviewTable('@Model.UN')"><i class="fa fa-table" aria-hidden="true"></i> Table</a>
                        </li>*@
                </ul>
            </div>
        </div>
        <div class="col-lg-3 col-sm-12 p-0 m-0">
            <div class="pull-right">
                <a href="javascript:void(0)" class="btn btn-secondary" onclick="list()"><i class="fa fa-list"></i></a>
                <a href="javascript:void(0)" class="btn btn-secondary" onclick="table()"><i class="fa fa-table"></i></a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="tab-content col-12" id="v-pills-tabContent">
            <div class="tab-pane fade show active" id="v-pills-onebyone" role="tabpanel" aria-labelledby="v-pills-onebyone-tab">
                <div id="divOneByOne">
                    @Html.Partial("PreviewOneByOne", Model)
                </div>
            </div>
            <div class="tab-pane fade" id="v-pills-multiple" role="tabpanel" aria-labelledby="v-pills-multiple-tab">
                <div id="divMultiple">

                </div>
            </div>
            @*<div class="tab-pane fade" id="v-pills-table" role="tabpanel" aria-labelledby="v-pills-table-tab">
                    <div id="divTable">

                    </div>
                </div>*@
        </div>
    </div>
</div>
<script>
    $("#EWSList").change(function () {
        previewSelectedList($(this).val());
    });

</script>