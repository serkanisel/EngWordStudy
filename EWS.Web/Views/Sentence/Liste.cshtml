@model List<EWS.Model.EWSSampleSentence>

<div class="container" id="sentenceListMain">
    <div class="input-group mb-3">
        <input type="text" class="form-control" id="txtSentenceAra" placeholder="kelime giriniz" aria-label="kelime giriniz" aria-describedby="basic-addon2">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="button" onclick="searchSentence('sentenceListMain')"><i class="fa fa-search"></i>&nbsp;Ara</button>
        </div>
    </div>

    @foreach (var item in Model)
    {
        <div class="row pb-2 m-1 rounded bg-light">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 m-1">
                        <input type="text" class="form-control listText bg-light" value="@item.Sentence" id="sentence_@item.UN" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 m-1">
                        <input type="text" class="form-control listText bg-light" value="@item.SentenceMean" id="sentenceMean_@item.UN" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 m-1">
                        <button onclick="UpdateSentence('@item.UN')" class="btn btn-secondary"><i class="fa fa-save"></i></button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

