@model List<EWS.Model.EWSWord>
<div class="container">
    <div class="row p-0">
        <div class="col-6 p-0">
            <h5 class="m-2 p-2">Kelime Listesi</h5>
        </div>
        <div class="col-6 p-0 text-right">
            <button type="button" class="btn btn-secondary" data-dismiss="alert" aria-label="Close" onclick="$('#SearchList').slideUp(); $('#txtBody').val('');">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

    </div>

    @if (Model != null && Model.Count == 0)
    {
        <div class="row col-12">
            <span>Kelime bulunamadı eklemek için <a href="javascript:void(0)" class="btn btn-info btn-sm" onclick="WordDoesntExists()">tıklayınız.</a> </span>
        </div>
    }

    <div class="row p-0">
        @{
            foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-12 p-0">
                    <div class="m-1 bg-light">
                        @Html.Partial("../EWSWords/WordForList", item)
                    </div>
                </div>
            }
        }
    </div>
</div>
