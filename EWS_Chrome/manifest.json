{
    "manifest_version":2,
    "name":"EWS",
    "version":"1.0",
    "description":"English Word Study",
    "icons" : {
        "128":"icon128.png",
        "48":"icon48.png",
        "16":"icon16.png"
    },
    "browser_action":{
        "default_icon":"icon48.png",
        "default_popup":"Main.html"
    },
    "options_page":"options.html",
    "background":{
            "scripts":["eventPage.js"],
            "persistent":false
    },
    "permissions": [
        "storage",
        "notifications",
        "contextMenus",
        "http://localhost/EWS.Web/EWSActions/",
        "http://localhost/EWS.Web/EWSActions/TranslateTextJson",
        "http://localhost/EWS.Web/EWSActions/WordSave",
        "http://localhost/EWS.Web/EWSActions/ScriptReturn",
        "http://localhost/EWS.Web/EWSActions/SaveSentence"
    ]
}